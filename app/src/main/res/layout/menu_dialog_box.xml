<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="420dp"
    android:layout_height="300dp"
    android:background="@color/teal_200"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgProfileCar"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSettigns"
        app:srcCompat="@drawable/baseline_directions_car_24" />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Update Profile"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfileCar"
        app:layout_constraintStart_toEndOf="@+id/imgProfileCar"
        app:layout_constraintTop_toTopOf="@+id/imgProfileCar"
        app:layout_constraintVertical_bias="0.611" />

    <TextView
        android:id="@+id/tvSettigns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SETTINGS"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>