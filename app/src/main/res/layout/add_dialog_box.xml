<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="680dp"
    android:layout_marginTop="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="355dp"
        android:layout_height="460dp"
        app:cardBackgroundColor="#E4E4E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp">


            <TextView
                android:id="@+id/tvAddDialogBoxTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ADD GAS INFORMATION"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/scrollView2" />

            <ImageView
                android:id="@+id/imgBtnCancel"
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:layout_marginEnd="72dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgBtnSave"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgBtnSave"
                app:srcCompat="@drawable/baseline_cancel_24" />

            <ImageView
                android:id="@+id/imgBtnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/baseline_add_24" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="345dp"
                android:layout_height="415dp"
                android:layout_marginBottom="207dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:hint="@string/kilometer_Per_Liter"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray"
                        tools:layout_editor_absoluteX="-142dp"
                        tools:layout_editor_absoluteY="56dp">

                        <EditText
                            android:id="@+id/etKmPerLiterAdd"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/white"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/Total_Amount"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray">

                        <EditText
                            android:id="@+id/etTotalAmountShow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray"
                            tools:layout_editor_absoluteX="151dp"
                            tools:layout_editor_absoluteY="7dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/Millage"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray">

                        <EditText
                            android:id="@+id/etMillage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray"
                            tools:layout_editor_absoluteX="286dp"
                            tools:layout_editor_absoluteY="7dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField4"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/Price_Per_Liter"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray">

                        <EditText
                            android:id="@+id/etPricePerLiter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray"
                            tools:layout_editor_absoluteX="152dp"
                            tools:layout_editor_absoluteY="34dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/Gas_Type"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray">

                        <EditText
                            android:id="@+id/etGasType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray"
                            tools:layout_editor_absoluteX="287dp"
                            tools:layout_editor_absoluteY="34dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField6"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/Number_of_Liter"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray">

                        <EditText
                            android:id="@+id/etNumberOfLiter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="34dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField7"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/Gas_Station"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray">

                        <Spinner
                            android:id="@+id/spinnerGasStation"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:contextClickable="false"
                            android:paddingStart="10dp" />

                        <!--                        <EditText-->
                        <!--                            android:id="@+id/etGasStation"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="match_parent"-->
                        <!--                            android:paddingStart="15dp"-->
                        <!--                            android:textColor="@color/black"-->
                        <!--                            android:textColorHint="@color/Gray"-->
                        <!--                            tools:layout_editor_absoluteX="16dp"-->
                        <!--                            tools:layout_editor_absoluteY="62dp" />-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField8"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:hint="@string/Branch"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray">

                        <EditText
                            android:id="@+id/etBranch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray"
                            tools:layout_editor_absoluteX="194dp"
                            tools:layout_editor_absoluteY="62dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textField9"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="60dp"
                        android:hint="@string/Date"
                        android:textColorHint="@color/Gray"
                        app:boxBackgroundColor="@color/white"
                        app:boxStrokeColor="@color/black"
                        app:hintTextColor="@color/Gray"
                        tools:layout_editor_absoluteX="-82dp"
                        tools:layout_editor_absoluteY="647dp">

                        <EditText
                            android:id="@+id/etNewDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/Gray"
                            app:layout_constraintStart_toStartOf="@+id/tvGasStation2"
                            tools:layout_editor_absoluteY="89dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>